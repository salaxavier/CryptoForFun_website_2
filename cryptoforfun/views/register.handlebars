
    <div class="cos">

    <form method="post" action="/users/register">
      <div class="container">
          <h2>Register a new account</h2>

          {{#if errors}}
                {{#each errors}}
                <div class="alert">{{msg}}</div>
                {{/each}}
          {{/if}}
          <br><br>
          <label>Name</label><br>
          <input type="text" class="form-control" placeholder="Name" name="name"><br><br>
          <label>Username</label><br>
          <input type="text" class="form-control" placeholder="Username" name="username"><br><br>
          <label>Email</label><br>
          <input type="text" class="form-control" placeholder="Email" name="email"><br><br>
          <label>Password</label><br>
          <input type="password" class="form-control" placeholder="Password" name="password"><br><br>
          <label>Retype your password</label><br>
          <input type="password" class="form-control" placeholder="Password" name="password2"><br><br>
          <input type="submit" value="Submit"><br><br>
      </div>
    </form>
  </div>
</body><br><br>
